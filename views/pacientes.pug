doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registro de Pacientes
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(type="module", src="/js/pacientes.js")

  body.bg-light
    .container.mt-5
      .card.shadow
        .card-body
          h2.text-center.h5.mb-4  Registro de Pacientes

          form#formPaciente
            .row.mb-3
              .col-md-8
                input.form-control#documento.text-center.fw-bold.fs-5(type="text", placeholder="Ingrese aquí el n° de documento", required, autocomplete="off")
              .col-md-2
                button.btn.btn-primary.w-100(type="button", id="btnBuscar") Buscar
              .col-md-2
                button.btn.btn-primary.w-100(type="button", id="btnModificar", disabled) Modificar

            .row.mb-3
              .col-md-6
                label.form-label(for="apellidonombres") Apellido y Nombres:
                input.form-control.fw-bold.fs-5(type="text", id="apellidonombres", required, autocomplete="off", style="text-transform: uppercase;")
              .col-md-3
                label.form-label(for="fechanacimiento") Fecha de Nacimiento:
                input.form-control(type="date", id="fechanacimiento", required)
              .col-md-3
                label.form-label(for="sexo") Sexo:
                select.form-select(id="sexo")
                  option(value="M") Masculino
                  option(value="F") Femenino

            .row.mb-3
              .col-md-5
                label.form-label(for="direccion") Dirección:
                input.form-control(type="text", id="direccion")
              .col-md-3
                label.form-label(for="telefono") Teléfono:
                input.form-control(type="text", id="telefono")
              .col-md-4
                label.form-label(for="email") Email:
                input.form-control(type="email", id="email", autocomplete="off")

            .row.mb-3
              .col-md-4
                label.form-label(for="idcobertura") Cobertura:
                select.form-select(id="idcobertura", name="idcobertura")
              .col-md-8
                label.form-label(for="contactoemergencia") Contacto de Emergencia:
                input.form-control(type="text", id="contactoemergencia")

            hr.my-4

            .row.mb-3
              .col-md-6
                label.form-label(for="fechafallecimiento") Fecha de Fallecimiento:
                input.form-control(type="date", id="fechafallecimiento")
              .col-md-6
                label.form-label(for="actadefuncion") N° Acta de Defunción:
                input.form-control(type="text", id="actadefuncion")

            .row
              .col-md-12
                button.btn.btn-primary.w-100.mt-4(type="button", id="btnRegistrar", disabled) Guardar

          #mensajes.text-danger.mt-3.text-center
