extends layout

block extraHead
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
  script(type="module", src="/js/usuarios.js")

block content
  style.
    .table th {
      background-color: rgb(41, 108, 175); 
      color: #f8f9fa;
      font-weight: bold;
      border: 1px solid rgb(41, 108, 175);
      text-align: center;
    }
    .table tbody td {
      border: 1px solid #dee2e6;
    }
    #mensajes {
      border-radius: 6px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    .col-fecha {
      width: 10%;
      text-align: center;
    }

    .col-medico {
      width: 25%;
      text-align: center;
    }

    .col-cantidad {
      width: 5%;
      text-align: center;
    }

    .col-medicamento {
      width: 30%;
    }

    .col-observaciones {
      width: 30%;
    }

    textarea.form-control {
      min-height: 38px;
      resize: vertical;
    }

    .form-select {
      cursor: pointer;
    }

    .btn-registrar {
      min-width: 180px;
      padding: 0.5rem 1.5rem;
      font-weight: 500;
    }

    .mb-3 {
      margin-bottom: 1.2rem !important;
    }

    .mb-4 {
      margin-bottom: 1.8rem !important;
    }
    .col-matricula {
      transition: all 0.3s ease;
    }

    #mensajes {
      border-radius: 6px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

  // Card del formulario
  .card.shadow.mb-4
    .card-body
      h2.text-center.h5.mb-4 Administración de Usuarios
      form#formUsuario
        // Rol primero
        .row.mb-3.justify-content-center
          .col-md-4.text-center
            label.form-label(for="idrol") Seleccione un Rol:
            select.form-select#idrol.form-select(name="idrol")
              option(value="") Seleccione un rol

        // Contenedor de campos de usuario
        #camposUsuario(style="display:none")
          input(type="hidden", id="idusuario")
          .row.mb-3
            .col-md-2
              label.form-label(for="matricula") N° Matrícula:
              input.form-control#matricula(type="text", autocomplete="off", disabled=true, value="No aplica", title="Ingresá la matrícula del profesional para buscar")
            .col-md-3
              label.form-label(for="nombre") Apellido y Nombres:
              input.form-control#nombre(type="text", autocomplete="off", style="text-transform: uppercase;")
            .col-md-3
              label.form-label(for="usuario") Identificacion (alias):
              input.form-control#usuario(type="text", autocomplete="off")
            .col-md-2 
              label.form-label(for="password") Contraseña:
              input.form-control#password(type="password")
            .col-md-2              
              label.form-label(for="activo") Estado
              select.form-select#activo(name="activo")
                option(value="true") Activo
                option(value="false") Inactivo

          .row.mb-3
            .col-md-4.offset-md-8.d-flex.align-items-end
              button.btn.btn-primary.w-100#btnGuardar(type="submit") Guardar usuario
              

        #mensajes.text-center

  // Card de la lista de usuarios
  .card.shadow#cardTablaUsuarios(style="display:none")
    .card-body
      h5.text-center.mb-3 Lista de Usuarios Registrados
      .row.mb-4
        .col-12.d-flex.justify-content-center.align-items-center
          label.form-label.fw-bold.me-2.mb-0(for="inputBusquedaUsuario") Buscar Usuario:
          input.form-control#inputBusquedaUsuario(type="text", placeholder="Buscar usuario...", style="max-width:250px;")

      table.table.table-bordered.table-sm.text-center
        thead 
          tr
            th ID
            th Nombre
            th Usuario
            th Rol
            th.col-matricula Matrícula
            th Estado
            th Acciones

        tbody#tablaUsuarios

      nav.mt-3.d-flex.justify-content-center
        ul.pagination#paginacionUsuarios
