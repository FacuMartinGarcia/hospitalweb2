doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registro de Enfermeros
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(type="module", src="/js/enfermeros.js")

  body.bg-light
    .container.mt-5
      .card.shadow
        .card-body
          h2.text-center.h5.mb-4 Registro de Enfermeros

          form#formEnfermero
            .row.mb-3
              .col-md-4
                input.form-control#matricula(type="text", placeholder="Ingrese matrícula para buscar", autocomplete="off")
              .col-md-4
                button.btn.btn-primary.w-100(type="button", id="btnBuscar") Buscar
              .col-md-4
                button.btn.btn-warning.w-100(type="button", id="btnModificar", disabled) Modificar

            .row.mb-3
              .col-md-4
                label.form-label(for="apellidonombres") Apellido y Nombres:
                input.form-control(type="text", id="apellidonombres", required, autocomplete="off", style="text-transform: uppercase;")

              .col-md-4
                label.form-label(for="telefono") Teléfono:
                input.form-control(type="text", id="telefono", autocomplete="off")

              .col-md-4
                label.form-label(for="email") Email:
                input.form-control(type="email", id="email", autocomplete="off")

            hr.my-4

            .row
              .col-md-3
                button.btn.btn-primary.w-100(type="submit", id="btnGuardar", disabled) Guardar

            #mensajes.text-danger.mt-3.text-center
