doctype html 
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Registro de Enfermeros
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(type="module", src="/js/enfermeros.js")

  body.bg-light
    .container.mt-5
      .card.shadow
        .card-body
          h2.text-center.h5.mb-4 Registro de Enfermeros

          form#formEnfermero
            .row.mb-3
              .col-md-6
                input.form-control#matricula.text-center.fw-bold.fs-5(
                  type="text", 
                  placeholder="Ingrese matrícula para buscar", 
                  autocomplete="off", 
                  required
                )
              .col-md-2
                button.btn.btn-primary.w-100(type="button", id="btnBuscar") Buscar
              .col-md-2
                button.btn.btn-primary.w-100(type="button", id="btnModificar", disabled) Modificar
              .col-md-2
                button.btn.btn-danger.w-100(type="button", id="btnDesactivar", disabled) Desactivar

            .row.mb-3
              .col-md-6
                label.form-label(for="apellidonombres") Apellido y Nombres:
                input.form-control.fw-bold.fs-5(
                  type="text", 
                  id="apellidonombres", 
                  required, 
                  autocomplete="off", 
                  style="text-transform: uppercase;"
                )
              .col-md-3
                label.form-label(for="telefono") Teléfono:
                input.form-control(type="text", id="telefono", autocomplete="off")
              .col-md-3
                label.form-label(for="email") Email:
                input.form-control(type="email", id="email", autocomplete="off")

            hr.my-4

            .row
              .col-md-12
                button.btn.btn-primary.w-100.mt-4(type="submit", id="btnRegistrar", disabled) Guardar

            #mensajes.text-danger.mt-3.text-center
