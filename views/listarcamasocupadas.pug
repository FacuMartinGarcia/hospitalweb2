extends layout

block extraHead
  script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
  link(rel="stylesheet", href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css")
  script(src="https://code.jquery.com/jquery-3.6.0.min.js")
  script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")
  style.
    .cama-ocupada {
      background-color: #ffdddd !important;
    }
    .texto-disponible {
      color: #6c757d;
      font-style: italic;
    }

block content
  .card.shadow
    .card-body
      h2.text-center.h5.mb-4 Listado de Camas

      .d-flex.justify-content-center.mb-4
        #customSearchContainer

      table#tablaCamas.table.table-striped.mt-4
        thead
          tr
            th Unidad
            th Ala
            th Habitación
            th Cama
            th Estado
            th Documento Paciente
            th Apellido y Nombres
            th Sexo
            th Internación
            th Fecha Ingreso
        tbody
          if camas && camas.length
            each cama in camas
              tr(class=cama.idinternacion && cama.idinternacion !== 'N/D' ? 'cama-ocupada' : '')
                td= cama.unidad || 'N/D'
                td= cama.ala || 'N/D'
                td= cama.habitacion || 'N/D'
                td= cama.cama || 'N/D'
                td= cama.idinternacion && cama.idinternacion !== 'N/D' ? 'Ocupada' : 'Disponible'
                td(class=!cama.documento_paciente || cama.documento_paciente === 'N/D' ? 'texto-disponible' : '')= cama.documento_paciente || '---'
                td(class=!cama.apellidonombres_paciente || cama.apellidonombres_paciente === 'N/D' ? 'texto-disponible' : '')= cama.apellidonombres_paciente || '---'
                td(class=!cama.sexo_paciente || cama.sexo_paciente === 'N/D' ? 'texto-disponible' : '')= cama.sexo_paciente || '---'
                td(class=!cama.idinternacion || cama.idinternacion === 'N/D' ? 'texto-disponible' : '')= cama.idinternacion || '---'
                td(class=!cama.fechadesde || cama.fechadesde === 'N/D' ? 'texto-disponible' : '')= cama.fechadesde || '---'
          else
            tr
              td(colspan="10").text-center No hay datos de camas disponibles.

  script.
    $(document).ready(function() {

      if ($('#tablaCamas tbody tr').not('.no-data').length > 0) {
        const tabla = $('#tablaCamas').DataTable({
          paging: true,
          searching: true,
          info: true,
          language: {
            url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
          },
          columnDefs: [
            { targets: [5,6,7,8,9], searchable: false } 
          ],
          initComplete: function () {
            const label = $('.dataTables_filter label');
            label.addClass('d-flex align-items-center gap-2');
            label.contents().filter(function(){ return this.nodeType === 3; }).wrap('<span class="me-2 fw-bold"></span>');

            $('.dataTables_filter input')
              .addClass('form-control fw-bold')
              .css({ 'text-transform': 'uppercase', 'width': '300px' });

            $('#customSearchContainer').append($('.dataTables_filter'));

            $('.dataTables_paginate')
              .addClass('d-flex justify-content-between align-items-center mt-3')
              .find('a')
              .addClass('btn btn-primary mx-1');

            $('.dataTables_info')
              .addClass('mt-3 fw-bold text-center w-100');
          }
        });
      } else {
        $('#customSearchContainer').html('<p class="text-muted text-center">No hay datos para mostrar</p>');
      }
    });