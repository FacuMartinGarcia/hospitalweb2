doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admisión Hospitalaria
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      html, body {
        height: 100%;
        margin: 0;
        background: linear-gradient(to right, #4facfe, #00f2fe);
      }

      .navbar-nav .dropdown-menu {
        background-color: #1c1c1c;
        border: none;
      }
      .dropdown-menu a {
        color: white;
      }
      .dropdown-menu a:hover {
        background-color: rgba(224, 219, 219, 0.87);
      }
      .navbar-dark .navbar-nav .nav-link {
        color: white;
      }

    block extraHead

  body
    // Encabezado con navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#") Admisión Hospitalaria
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto.mb-2.mb-lg-0

            // Profesionales
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown") Profesionales
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/medicos") Médicos
                li
                  a.dropdown-item(href="/enfermeros") Enfermeros

            // Pacientes
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown") Pacientes
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/pacientes") Legajos
                li
                  a.dropdown-item(href="/pacienteslistado") Listado / Búsquedas
                li
                  a.dropdown-item(href="/pacientes/historia-clinica") Historia Clínica

            // Internaciones
            li.nav-item
              a.nav-link(href="/internacion") Registro de Admisión

            // Enfermería
            li.nav-item
              a.nav-link(href="/enfermeria/evaluaciones") Evaluaciones de Pacientes

            // Registro Médico
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown") Registro Médico
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/registro/evaluaciones") Evaluaciones Médicas
                li
                  a.dropdown-item(href="/registro/medicamentos") Dispensación de Medicamentos
                li
                  a.dropdown-item(href="/registro/analisis") Análisis y Estudios
                li
                  a.dropdown-item(href="/registro/cirugias") Cirugías
                li
                  a.dropdown-item(href="/registro/terapias") Terapias

            // Nomencladores
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown") Nomencladores
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/nomencladores/obras-sociales") Obras Sociales
                li
                  a.dropdown-item(href="/nomencladores/especialidades") Especialidades Médicas
                li
                  a.dropdown-item(href="/nomencladores/diagnosticos") Diagnósticos
                li
                  a.dropdown-item(href="/nomencladores/medicamentos") Medicamentos
                li
                  a.dropdown-item(href="/nomencladores/clasificaciones") Clasificaciones Terapéuticas
                li
                  a.dropdown-item(href="/nomencladores/origenes") Orígenes de Consultas
                li
                  a.dropdown-item(href="/nomencladores/tipos-estudios") Tipos de Estudios

          span.text-white.ms-auto.d-none.d-lg-inline#fechaHora

    // Área de contenido
    .container.mt-4
      block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    script.
      function actualizarFechaHora() {
        const fechaHoraElement = document.getElementById("fechaHora");
        const fecha = new Date();
        const opciones = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
        fechaHoraElement.textContent = fecha.toLocaleDateString('es-ES', opciones);
      }
      setInterval(actualizarFechaHora, 1000);
    block extraScripts
